generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id               Int          @id @default(autoincrement())
  title            String       @db.VarChar(255)
  description      String       @db.Text
  status           Status       @default(OPEN)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  assignedToUserId String?      @db.VarChar(255)
  assignedToUser   UserAccount? @relation(fields: [assignedToUserId], references: [id])
}

enum Status {
  OPEN
  CLOSED
}

model UserAccount {
  id             String      @id @default(cuid())
  name           String?
  username       String?     @unique
  hashedPassword String?
  image          String      @default("default_profile_vtwkjs")
  restrictions   Restriction @default(EMPLOYEE)
  verification   Boolean     @default(false)
  assignedSiteId String?
  assignedSite   Site?       @relation(fields: [assignedSiteId], references: [id])
  assignedTicket Ticket[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

enum Restriction {
  ADMIN
  EMPLOYEE
}

model Site {
  id          String        @id @default(cuid())
  siteName    String?
  location    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  UserAccount UserAccount[]
}
